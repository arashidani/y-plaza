{
  "name": "y-plaza",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:local": "next dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:bg": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down",
    "build": "next build --turbopack",
    "build:docker": "docker-compose up --build",
    "start": "next start",
    "lint": "eslint --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check:sitemap": "curl -sS ${NEXT_PUBLIC_SITE_URL:-http://localhost:3000}/sitemap.xml | head -n 50",
    "check:robots": "curl -sS ${NEXT_PUBLIC_SITE_URL:-http://localhost:3000}/robots.txt",
    "check:all": "pnpm -s check:sitemap && echo \n---\n && pnpm -s check:robots",
    "generate:holidays": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/generateHolidays.ts"
  },
  "browserslist": {
    "production": [
      "chrome >= 93",
      "edge >= 93",
      "firefox >= 92",
      "safari >= 15.4",
      "ios_saf >= 15.4",
      "and_chr >= 93"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
